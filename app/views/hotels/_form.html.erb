<%= form_with model: @hotel, local: true, url: (@hotel.persisted? ? hotel_path(@hotel) : hotels_path) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nombre del Hotel' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address, 'Dirección del Hotel' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone, 'Teléfono del Hotel' %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email del Hotel' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :stars, 'Estrellas del Hotel' %>
      <%= form.select :stars, [%w[★ 1], %w[★★ 2], %w[★★★ 3], %w[★★★★ 4], %w[★★★★★ 5]], { include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :price_range, 'Rango de Precios' %>
      <%= form.select :price_range, [%w[$ $], %w[$$ $$], %w[$$$ $$$], %w[$$$$ $$$$]], { include_blank: true }, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descripción del Hotel' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
