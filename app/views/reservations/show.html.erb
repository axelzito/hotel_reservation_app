<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalles de la Reserva</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Detalles de la Reserva</h3>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Nombre del Hotel:</dt>
            <dd class="col-sm-8"><%= @reservation.hotel&.name %> (<%= @reservation.hotel&.stars || 'N/A' %><%= fa_icon 'star' %>)</dd>

            <dt class="col-sm-4">Nombre del Huésped:</dt>
            <dd class="col-sm-8"><%= @reservation.guest_name %></dd>

            <dt class="col-sm-4">Email del Huésped:</dt>
            <dd class="col-sm-8"><%= @reservation.guest_email %></dd>

            <dt class="col-sm-4">Check-in:</dt>
            <dd class="col-sm-8"><%= @reservation.check_in.strftime('%d/%m/%Y') %></dd>

            <dt class="col-sm-4">Check-out:</dt>
            <dd class="col-sm-8"><%= @reservation.check_out.strftime('%d/%m/%Y') %></dd>

            <dt class="col-sm-4">Precio:</dt>
            <dd class="col-sm-8"><%= @reservation.currency %> <%= @reservation.price %></dd>

          </dl>
        </div>
        <div class="card-footer">
          <%= link_to 'Editar Reserva', edit_reservation_path(@reservation), class: 'btn btn-warning' %>
          <%= link_to 'Volver a la Lista', reservations_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
