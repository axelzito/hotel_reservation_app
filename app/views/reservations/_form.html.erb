<%= form_with model: @reservation, local: true, url: (@reservation.persisted? ? reservation_path(@reservation) : reservations_path) do |form| %>
  <div class="form-group">
    <%= form.label :guest_name, t('reservations.form.guest_name') %>
    <%= form.text_field :guest_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :guest_email, t('reservations.form.guest_email') %>
    <%= form.text_field :guest_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :hotel_id, t('reservations.form.hotel_name') %>
    <%= form.collection_select :hotel_id, Hotel.all, :id, :name_with_stars, { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :currency, t('reservations.form.currency') %>
      <%= form.select :currency, [%w[â‚¬ EUR], %w[U$D USD]], { include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :price, t('reservations.form.price') %>
      <%= form.text_field :price, class: 'form-control', id: 'price-field' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :check_in, t('reservations.form.check_in') %>
      <%= form.date_field :check_in, class: 'form-control', id: 'check_in_datepicker' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :check_out, t('reservations.form.check_out') %>
      <%= form.date_field :check_out, class: 'form-control', id: 'check_out_datepicker' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit t('reservations.form.save_button'), class: 'btn btn-primary' %>
  </div>
<% end %>
