<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if controller_name != 'sessions' %>
        <%= link_to t('devise.sessions.new.log_in'), new_session_path(resource_name), class: "btn btn-primary mb-3" %><br />
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to t('devise.registrations.new.sign_up'), new_registration_path(resource_name), class: "btn btn-secondary mb-3" %><br />
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t('devise.passwords.new.forgot_password'), new_password_path(resource_name), class: "btn btn-secondary mb-3" %><br />
      <% end %>

      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to t('devise.confirmations.new.resend_confirmation'), new_confirmation_path(resource_name), class: "btn btn-secondary mb-3" %><br />
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to t('devise.unlocks.new.resend_unlock'), new_unlock_path(resource_name), class: "btn btn-secondary mb-3" %><br />
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to t('devise.omniauth.providers.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: "btn btn-secondary mb-3", data: { turbo: false } %><br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>
